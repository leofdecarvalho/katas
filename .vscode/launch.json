    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Pytest with Coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                ".",
                "--cov=.",
                "--cov-report=xml",
                "--cov-report=html",
                "-W", "ignore::DeprecationWarning"
            ],
            "console": "integratedTerminal"
        }
    ]
}