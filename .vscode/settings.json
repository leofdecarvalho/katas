{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__init__.py": true,
        "__init__.py": true,
        "**/__pycache__": true,
        "__pycache__": true,
        "tests/.pytest_cache": true,
        "**/.pytest_cache": true,
        ".pytest_cache": true
    },
    "explorerExclude.backup": {},
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "terminal.integrated.scrollback": 10000,
    "testing.coverageBarThresholds": {

        "red": 0,
        "yellow": 60,
        "green": 90
    },
    "livePreview.defaultPreviewPath": "/htmlcov/index.html",
    "python.testing.pytestArgs": [
        "tests"
    ],
    "cSpell.words": [
        "simpy"
    ],
}